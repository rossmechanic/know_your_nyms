container_commands:
  01_collectstatic:
    command: "python manage.py collectstatic --noinput"
  02_migrate:
    command: "python manage.py migrate"
    leader_only: true

option_settings:
  "aws:elasticbeanstalk:container:python":
    WSGIPath: "NLP4CCB_Django_App/wsgi.py"
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "static/"
